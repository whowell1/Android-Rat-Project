<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs2340.ratapplication.controllers.DetailPage">

    <TextView
        android:id="@+id/addressView"
        android:layout_width="86dp"
        android:layout_height="18dp"
        android:layout_marginLeft="249dp"
        android:text="Address"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="116dp" />

    <TextView
        android:id="@+id/cityView"
        android:layout_width="84dp"
        android:layout_height="17dp"
        android:text="City"
        android:layout_marginRight="257dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        tools:layout_editor_absoluteY="60dp" />

    <TextView
        android:id="@+id/boroughView"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:text="Borough"
        tools:layout_editor_absoluteY="145dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/zipcodeView"
        android:layout_width="86dp"
        android:layout_height="20dp"
        android:text="Zipcode"
        android:layout_marginRight="257dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/boroughView" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="247dp" />

    <TextView
        android:id="@+id/sightingIDView"
        android:layout_width="87dp"
        android:layout_height="16dp"
        android:layout_marginLeft="253dp"
        android:text="sightingID"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/longitudeView"
        android:layout_width="96dp"
        android:layout_height="19dp"
        android:text="Longitude"
        tools:layout_editor_absoluteX="248dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/zipcodeView" />

    <TextView
        android:id="@+id/latitudeView"
        android:layout_width="96dp"
        android:layout_height="18dp"
        android:text="Latitude"
        tools:layout_editor_absoluteX="248dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/longitudeView" />

    <TextView
        android:id="@+id/locationTypeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LocationType"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="88dp" />
</android.support.constraint.ConstraintLayout>
