<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs2340.ratapplication.controllers.SearchDatesForChartPage">

    <Button
        android:id="@+id/searchForSighting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Map Sighting"
        tools:layout_editor_absoluteX="112dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/searchForCharts"
        app:layout_constraintVertical_bias="0.869" />

    <Button
        android:id="@+id/searchForCharts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Chart "
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="128dp"
        android:layout_marginRight="136dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/startDateCharts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="62dp" />

    <EditText
        android:id="@+id/endDateCharts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="141dp" />
</android.support.constraint.ConstraintLayout>
