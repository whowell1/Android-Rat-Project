<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs2340.ratapplication.controllers.SearchDatesForChartPage">

    <Button
        android:id="@+id/searchForSighting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Map Sighting"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/searchForCharts"
        app:layout_constraintVertical_bias="0.925"
        android:layout_marginLeft="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/searchForCharts"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:text="View Chart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="153dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <EditText
        android:id="@+id/startDateCharts"
        android:layout_width="104dp"
        android:layout_height="42dp"
        android:text="Start Date"
        android:layout_marginLeft="153dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp" />

    <EditText
        android:id="@+id/endDateCharts"
        android:layout_width="114dp"
        android:layout_height="43dp"
        android:text="End Date"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/searchForSighting"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/startDateCharts"
        android:layout_marginRight="124dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.22"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />
</android.support.constraint.ConstraintLayout>
